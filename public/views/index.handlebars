<div class="container">
    <div class= "row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="../assets/imgs/burger.jpg" alt="burger"/>
            <h2>Burger Time</h2>
        </div>
        <div class="col-md-6 text-center task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.eaten}}
                <div class="col-md-9 text-center">
                    <pre>{{this.id}} {{this.burgername}}</pre>
                </div>
                <div class="col-md-3 text-cent">
                    <form class="eaten-form button-size">
                        <input input type="hidden" class="burger_id" type="text" value={{this.id}}>
                        <button type="submit" class="btn btn-default">eat it</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center task">
            {{#each burger_data}}
            {{#if this.eaten}}}
            <input class="form-control" type="text" placeholder="{{this.id}} {{this.burgername}}"
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Add a burger you want to eat and click the button</p>
		</div>
	</div>
</div>
